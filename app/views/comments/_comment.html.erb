<%= div_for comment do %>
  <%= image_tag gravatar_url(comment.user) %>
  <p><%= comment.content %></p>

  <% if current_user_admin? || comment.user == current_user %>
    <%= link_to 'Edit', project_edit_comment_path(@project, comment) %>
    <%= link_to 'Destroy', project_comment_path(@project, comment), :method => :delete, :confirm => 'Are you sure?' %>
  <% end %>
<% end %>